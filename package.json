{
  "name": "chilly-movies",
  "productName": "Chilly Movies",
  "version": "0.1.0",
  "description": "Desktop-first offline movie downloader and player",
  "private": true,
  "main": "dist/main/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:backend && npm run build:main && npm run build:renderer",
    "build:backend": "tsc -p tsconfig.build.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:backend": "tsx src/server.ts",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:3000 http://localhost:5173 && electron .",
    "electron": "electron .",
    "test": "vitest",
    "lint": "echo \"no linter configured\"",
    "package": "npm run build && electron-builder build --publish never",
    "package:all": "npm run build && electron-builder build -mwl --publish never"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@types/eventemitter3": "^2.0.4",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^18.19.130",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/webtorrent": "^0.109.7",
    "@vitejs/plugin-react": "^4.7.0",
    "axe-core": "^4.11.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vite": "^5.4.20",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "debug": "^4.3.4",
    "dotenv": "^17.2.3",
    "eventemitter3": "^4.0.7",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "i18next": "^23.16.8",
    "node-fetch": "^3.3.1",
    "p-retry": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.3",
    "react-router-dom": "^6.30.1",
    "webtorrent": "^2.1.34"
  },
  "build": {
    "appId": "com.chillymovies.app",
    "productName": "Chilly Movies",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "AudioVideo"
    }
  }
}

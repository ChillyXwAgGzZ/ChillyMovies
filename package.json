{
  "name": "chilly-movies",
  "productName": "Chilly Movies",
  "version": "0.1.0",
  "description": "Desktop-first offline movie downloader and player",
  "author": {
    "name": "ChillyMovies Team",
    "email": "team@chillymovies.app"
  },
  "private": true,
  "main": "dist/main/main/main.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:backend && npm run build:main && npm run build:renderer",
    "build:backend": "tsc -p tsconfig.build.json",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:backend": "tsx src/server.ts",
    "dev:renderer": "vite",
    "dev:electron": "wait-on http://localhost:3000 http://localhost:5173 && electron .",
    "electron": "npm run build && electron .",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "echo \"no linter configured\"",
    "package": "npm run build && electron-builder build --publish never",
    "package:all": "npm run build && electron-builder build -mwl --publish never",
    "package:win": "npm run build && electron-builder build --win --publish never",
    "package:win:portable": "npm run build && electron-builder build --win portable --publish never",
    "package:win:nsis": "npm run build && electron-builder build --win nsis --publish never"
  },
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@playwright/test": "^1.56.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/eventemitter3": "^2.0.4",
    "@types/express": "^4.17.17",
    "@types/express-rate-limit": "^5.1.3",
    "@types/node": "^18.19.130",
    "@types/node-fetch": "^2.6.13",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@types/webtorrent": "^0.109.7",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.11.0",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "playwright": "^1.56.1",
    "postcss": "^8.5.6",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.18",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.0",
    "vite": "^5.4.20",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "debug": "^4.3.4",
    "dotenv": "^17.2.3",
    "eventemitter3": "^4.0.7",
    "express": "^4.18.2",
    "express-rate-limit": "^6.7.0",
    "i18next": "^23.16.8",
    "keytar": "^7.9.0",
    "lucide-react": "^0.546.0",
    "node-fetch": "^3.3.1",
    "p-retry": "^5.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-i18next": "^14.1.3",
    "react-router-dom": "^6.30.1",
    "webtorrent": "^1.9.7"
  },
  "build": {
    "appId": "com.chillymovies.app",
    "productName": "Chilly Movies",
    "copyright": "Copyright Â© 2025 ChillyMovies Team",
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "media",
        "to": "media",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "buildResources": "assets",
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.entertainment",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "ChillyMovies Team",
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Chilly Movies",
      "include": "assets/installer.nsh",
      "perMachine": false,
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "displayLanguageSelector": false,
      "installerLanguages": [
        "en_US"
      ],
      "license": "LICENSE"
    },
    "portable": {
      "artifactName": "${productName}-Portable-${version}.${ext}"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "AudioVideo",
      "synopsis": "Desktop-first offline movie downloader and player",
      "description": "Chilly Movies is a desktop application for downloading and managing your movie collection offline.",
      "desktop": {
        "Name": "Chilly Movies",
        "Type": "Application",
        "Categories": "AudioVideo;Video;Player;"
      }
    }
  }
}
